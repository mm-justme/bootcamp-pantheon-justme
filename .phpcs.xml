<?xml version="1.0"?>
<ruleset name="Drupal Project">
  <!-- Scan the whole project, then exclude vendor/core/contrib and non-PHP. -->
  <description>Drupal PHP coding standards (global phpcs setup).</description>

  <!-- Scan project root -->
  <file>.</file>

  <!-- Exclude big/irrelevant dirs -->
  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>node_modules/*</exclude-pattern>
  <exclude-pattern>web/core/*</exclude-pattern>
  <exclude-pattern>web/modules/contrib/*</exclude-pattern>
  <exclude-pattern>web/themes/contrib/*</exclude-pattern>

  <!-- Donâ€™t lint non-PHP (other tools handle these) -->
  <exclude-pattern>*.js</exclude-pattern>
  <exclude-pattern>*.css</exclude-pattern>
  <exclude-pattern>*.scss</exclude-pattern>
  <exclude-pattern>*.yml</exclude-pattern>
  <exclude-pattern>*.yaml</exclude-pattern>
  <exclude-pattern>*.twig</exclude-pattern>

  <!-- Drupal rules -->
  <rule ref="Drupal"/>
  <rule ref="DrupalPractice"/>

  <!-- Only PHP-like extensions -->
  <arg name="extensions" value="php,module,inc,install,profile,theme"/>
</ruleset>
