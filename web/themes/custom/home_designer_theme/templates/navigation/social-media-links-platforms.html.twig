#}

{%
  set classes = [
    'social-media-links--platforms',
    'platforms',
    appearance.orientation == 'h' ? 'inline horizontal' : 'vertical',
  ]
%}

<ul{{ attributes.addClass(classes) }}>
  {% for platform in platforms %}
    <li class="!p-0 !mr-4">
      <a class="text-[9px] hover:text-theme-gold transition-colors duration-100 social-media-link-icon--{{ platform.id }}" href="{{ platform.url | safe_link }}" {{ platform.attributes }} >
        {{ platform.element }}
      </a>

      {% if appearance.show_name %}
        {% if appearance.orientation == 'h' %}
          <br />
        {% endif %}

        <span><a class="social-media-link--{{ platform.id }}" href="{{ platform.url | safe_link  }}" {{ platform.attributes }}>{{ platform.name }}</a></span>
      {% endif %}
    </li>
  {% endfor %}
</ul>
